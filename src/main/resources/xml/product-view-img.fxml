<StackPane xmlns:fx="http://javafx.com/fxml/1"
			fx:controller="com.tech.product.ProductImageController">
   <children>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
